<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/eq_de_layout_info"
    tools:context="cn.tties.maint.activity.EquipmentCheckDetailsActivity">
    <RelativeLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="@dimen/x374"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/eq_de_tv"
            android:layout_marginTop="@dimen/y60"
            android:layout_marginLeft="@dimen/x40"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建设备"/>
        <LinearLayout
            android:id="@+id/eq_de_start"
            android:layout_below="@+id/eq_de_tv"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:layout_marginTop="@dimen/y22"
            android:layout_marginLeft="@dimen/x53"
            android:layout_width="@dimen/x288"
            android:layout_height="@dimen/y52">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恢复初始"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/eq_de_old"
            android:layout_below="@+id/eq_de_start"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x53"
            android:layout_width="@dimen/x288"
            android:layout_height="@dimen/y52">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入先前配置"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y40"
            android:layout_marginLeft="@dimen/x53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/eq_de_cancel"
                android:background="@drawable/btn_cancel"
                android:gravity="center"
                android:layout_width="@dimen/x119"
                android:layout_height="@dimen/y52">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/eq_de_confirm"
                android:background="@drawable/btn_confirm_normal"
                android:layout_marginLeft="11dp"
                android:gravity="center"
                android:layout_width="@dimen/x158"
                android:layout_height="@dimen/y52">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="@dimen/x21"
        android:paddingRight="@dimen/y49"
        android:background="#EFF1F4"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="@dimen/y26"
            android:layout_marginTop="@dimen/y66"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eq_de_name"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:text="高压开关柜"/>
            <TextView
                android:id="@+id/eq_de_CabinetTV"
                android:layout_marginLeft="@dimen/x54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否有柜体"
                android:textColor="@color/common_text_min_gray" />

            <RadioGroup
                android:layout_marginLeft="@dimen/x15"
                android:id="@+id/eq_de_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/eq_de_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="是"
                    android:textSize="14sp"
                    android:textColor="@color/common_text_max_gray" />
                <RadioButton
                    android:id="@+id/eq_de_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="否"
                    android:textSize="14sp"
                    android:textColor="@color/common_text_max_gray" />
            </RadioGroup>
        </LinearLayout>
        <include layout="@layout/layout_edittext"/>
        <LinearLayout
            android:layout_marginTop="@dimen/y37"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_max_gray"
                android:text="包含设备"/>
            <TextView
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center"
                android:id="@+id/eq_de_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/common_text_max_gray" />
        </LinearLayout>
        <ListView
            android:layout_marginTop="@dimen/y20"
            android:id="@+id/eq_de_list_feal_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:layout_marginTop="@dimen/y20"
            android:id="@+id/eq_de_list_lv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/colorTransparent">
        </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:layout_marginTop="@dimen/y20"
            android:id="@+id/eq_de_list_lv4_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/colorTransparent">
        </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/btn_dialog"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="@dimen/x622"
        android:layout_height="@dimen/y240">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_title"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/y57"
            android:text="更新信息" />
        <LinearLayout
            android:layout_marginBottom="@dimen/y43"
            android:layout_marginTop="@dimen/y53"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/x180"
                android:layout_height="@dimen/y54"
                android:background="@drawable/selector_btn_confirm_click"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="确认" />
            <Button
                android:layout_marginLeft="@dimen/x25"
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/x180"
                android:layout_height="@dimen/y54"
                android:background="@drawable/selector_btn_cancel_click"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
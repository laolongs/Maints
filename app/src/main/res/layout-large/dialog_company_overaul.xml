<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/table_dialog_layout">

    <RelativeLayout style="@style/table_dialog_title">

        <Button  android:id="@+id/btn_cancel" style="@style/table_dialog_btn_cancel" />

        <TextView
            style="@style/table_dialog_title_text"
            android:text="创建检修" />
    </RelativeLayout>


    <TextView
        android:id="@+id/text_companyname"
        style="@style/table_dialog_text"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="用户名" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/table_dialog_first_text"
            android:text="检修时间"/>

        <EditText
            android:id="@+id/edit_overaul_date"
            style="@style/table_dialog_edit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            style="@style/table_dialog_first_text"
            android:text="计划完成"/>

        <EditText
            android:id="@+id/edit_overaul_endate"
            style="@style/table_dialog_edit"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="40dp"
        style="@style/table_dialog_btn_confirm"
        android:text="修改" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/table_dialog_layout">

    <RelativeLayout style="@style/table_dialog_title">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:text="选择公司" />
        <!--<SearchView-->
            <!--android:layout_toRightOf="@+id/text_title"-->
            <!--android:id="@+id/searchView"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginStart="50dp"-->
            <!--android:background="@drawable/edittext_search"-->
            <!--android:iconifiedByDefault="false"-->
            <!--android:queryHint="请输入搜索内容"/>-->
        <AutoCompleteTextView
            android:layout_toRightOf="@+id/text_title"
            android:paddingLeft="10dp"
            android:id="@+id/searchView"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_radius"
            android:textColor="@color/gray" />
        <TextView
            android:id="@+id/question_search"
            android:gravity="center"
            android:layout_toRightOf="@+id/searchView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:background="@color/listview_check"
            android:textColor="@color/white"
            android:text="搜索" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_above="@+id/question_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <!--<LinearLayout-->
                    <!--android:orientation="vertical"-->
                    <!--android:id="@+id/company_ll"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent">-->

                <!--</LinearLayout>-->
                <ListView
                    android:id="@+id/question_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
        </FrameLayout>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/question_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_cancel"
                style="@style/table_dialog_btn_cancel" />
            <Button
                android:id="@+id/btn_save"
                style="@style/table_dialog_btn_confirm"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="确定" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
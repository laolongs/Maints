<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F0F1F5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="800dp"
        android:layout_height="500dp">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="编辑设备详情"/>
            <LinearLayout
                android:background="@color/colorPrimary"
                android:id="@+id/dg_eq_de_cancel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="返回"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorAccent"
                android:id="@+id/dg_eq_de_save"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/dg_eq_de_saveTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="保存"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/dg_eq_de_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="继电保护装置"/>
        <include layout="@layout/layout_edittext"/>
        <ListView
            android:id="@+id/dg_eq_de_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

</LinearLayout>
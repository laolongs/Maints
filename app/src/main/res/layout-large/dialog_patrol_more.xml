<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/table_dialog_layout"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingRight="@dimen/x55"
        android:paddingLeft="@dimen/x55"
        android:orientation="vertical"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y652">
        <LinearLayout
            android:layout_marginTop="@dimen/x40"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_type"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y26"
                android:src="@mipmap/img_patrol_general"/>
            <TextView
                android:layout_marginLeft="@dimen/x15"
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题描述"
                android:textSize="20sp"
                android:textColor="#424242"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y28"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_max_gray"
                android:textSize="14sp"
                android:text="sfs"/>
            <ImageView
                android:layout_marginLeft="@dimen/x43"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/y15"
                android:src="@mipmap/img_location"
                />
            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="@color/common_text_max_gray"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/x41"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/x26"
            android:layout_marginTop="@dimen/x27"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/x40"
                android:background="@drawable/btn_confirm_normal"
                android:textColor="@color/white"
                android:text="关闭" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
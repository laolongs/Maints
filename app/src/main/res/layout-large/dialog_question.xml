<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/table_dialog_layout"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@color/common_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="@dimen/x42"
        android:paddingRight="@dimen/x50"
        android:orientation="vertical"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y543">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="@dimen/x40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    android:textSize="26sp"
                    android:textColor="@color/black"/>

            </RelativeLayout>
            <EditText
                android:layout_marginTop="@dimen/x15"
                android:id="@+id/edit_describe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x176"
                android:background="@drawable/bg_listview_gray"
                android:gravity="left|top"
                android:textSize="18sp"
                android:hint="输入描述内容"
                android:textColor="@color/common_text_min_gray"
                android:inputType="textMultiLine"
                android:minLines="5" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/x25"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/listview_image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/x53"
            android:layout_marginTop="@dimen/x46"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x52">
            <Button
                android:layout_marginRight="@dimen/x15"
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/x119"
                android:layout_height="match_parent"
                android:background="@drawable/btn_cancel"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="取 消" />
            <Button
                android:id="@+id/btn_add"
                android:layout_width="@dimen/x158"
                android:layout_height="match_parent"
                android:background="@drawable/btn_confirm_normal"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="取 消" />
                android:text="添 加" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
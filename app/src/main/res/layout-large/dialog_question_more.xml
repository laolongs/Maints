<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/table_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/x55"
        android:paddingRight="@dimen/x55"
        android:layout_width="@dimen/x720"
        android:layout_height="@dimen/y412">
        <RelativeLayout
            android:layout_marginTop="@dimen/y40"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题描述"
                android:textSize="20sp"
                android:textColor="#424242"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/y30"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#000000"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/x42"
            android:layout_marginTop="@dimen/x49"
            android:id="@+id/ll"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y40"
                android:background="@drawable/btn_confirm_normal"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="关闭" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
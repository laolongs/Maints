<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/common_linearLayout">

    <TextView
        style="@style/common_title"
        android:text="创建企业" />

    <ImageView style="@style/common_title_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="75dp"
            android:fadingEdge="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/form_linearLayout"
                    android:layout_marginTop="20dp">

                    <TextView
                        style="@style/form_first_textview"
                        android:text="企业信息"
                        android:textColor="@color/black32" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="企业名称"
                                android:textColor="@color/black48" />

                            <EditText
                                android:id="@+id/edit_company_name"
                                style="@style/form_edittext_large" />

                            <TextView
                                style="@style/form_third_textview"
                                android:text="企业简称"
                                android:textColor="@color/black48" />

                            <EditText
                                android:id="@+id/edit_company_short_name"
                                style="@style/form_edittext" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="企业地址"
                                android:textColor="@color/black48" />

                            <EditText
                                android:id="@+id/edit_company_addr"
                                style="@style/form_edittext_large" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="所属行业"
                                android:textColor="@color/black48" />

                            <Spinner
                                android:id="@+id/spinner_industry"
                                android:layout_width="150dp"
                                android:layout_height="30dp" />
                            <TextView
                                style="@style/form_third_textview"
                                android:text="省份"
                                android:textColor="@color/black48" />

                            <Spinner
                                android:id="@+id/spinner_area"
                                android:layout_width="150dp"
                                android:layout_height="30dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="短信接收电话"
                                android:textColor="@color/black48"/>

                            <EditText
                                android:id="@+id/edit_sms_tel"
                                style="@style/form_edittext_short"
                                android:maxLength="11"
                                android:inputType="number"/>

                            <EditText
                                android:id="@+id/edit_sms_tel2"
                                android:layout_marginLeft="10dp"
                                style="@style/form_edittext_short"
                                android:maxLength="11"
                                android:inputType="number"/>

                            <TextView
                                style="@style/form_third_textview"
                              android:layout_marginLeft="30dp"
                                android:text="代理人"
                                android:textColor="@color/black48" />

                            <EditText
                                android:id="@+id/edit_agent_name"
                                style="@style/form_edittext" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="用电户号"
                                android:textColor="@color/black48" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/edit_ele_account"
                                        style="@style/form_edittext_middle" />

                                    <TextView
                                        style="@style/form_second_textview"
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:text="容量"
                                        android:textColor="@color/black48" />

                                    <EditText
                                        android:id="@+id/edit_ele_volume"
                                        style="@style/form_edittext_middle"
                                        android:layout_marginLeft="10dp" />

                                    <ImageView
                                        android:id="@+id/image_add"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@mipmap/ic_add" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/layout_ele_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/form_linearLayout"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/form_first_textview"
                        android:text="变压器信息"
                        android:textColor="@color/black32" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="变压器总容量"
                                android:textColor="@color/black48" />
                            <EditText
                                android:id="@+id/edit_transformer_capacity"
                                style="@style/form_edittext"
                                android:inputType="number"
                                android:maxLength="8"/>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="KVA"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="变压器个数"
                                android:textColor="@color/black48"/>

                            <EditText
                                android:id="@+id/edit_transformer_count"
                                style="@style/form_edittext"
                                android:inputType="number"
                                android:maxLength="2"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/form_linearLayout"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/form_first_textview"
                        android:text="合同期限"
                        android:textColor="@color/black32" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/form_second_textview"
                                    android:text="开始日期"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_startDate"
                                    style="@style/form_edittext_short"
                                    android:hint="请选择日期" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/form_second_textview"
                                    android:text="结束日期"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_endDate"
                                    style="@style/form_edittext_short"
                                    android:hint="请选择日期" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/form_second_textview"
                                android:text="月服务费"
                                android:textColor="@color/black48" />

                            <EditText
                                android:id="@+id/edit_month_money"
                                style="@style/form_edittext_short"
                                android:inputType="number|numberDecimal"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="¥"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/form_linearLayout"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/form_first_textview"
                        android:text="企业联系人"
                        android:textColor="@color/black32" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/form_second_textview"
                                    android:text="商务负责人"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_business_name"
                                    style="@style/form_edittext_short" />

                                <TextView
                                    style="@style/form_third_textview"
                                    android:text="联系方式"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_business_tel"
                                    style="@style/form_edittext_short"
                                    android:inputType="textPhonetic|numberSigned"
                                    android:maxLength="12"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/form_second_textview"
                                    android:text="财务负责人"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_finance_name"
                                    style="@style/form_edittext_short"/>

                                <TextView
                                    style="@style/form_third_textview"
                                    android:text="联系方式"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_finance_tel"
                                    style="@style/form_edittext_short"
                                    android:inputType="textPhonetic|numberSigned"
                                    android:maxLength="12"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/form_second_textview"
                                    android:text="技术负责人"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_tech_name"
                                    style="@style/form_edittext_short" />

                                <TextView
                                    style="@style/form_third_textview"
                                    android:text="联系方式"
                                    android:textColor="@color/black48" />

                                <EditText
                                    android:id="@+id/edit_tech_tel"
                                    style="@style/form_edittext_short"
                                    android:inputType="textPhonetic|numberSigned"
                                    android:maxLength="12"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/form_linearLayout"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/form_first_textview"
                        android:text="指派人员"
                        android:textColor="@color/black32" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/form_second_textview"
                                    android:text="运维负责人"
                                    android:textColor="@color/black48" />

                                <Spinner
                                    android:id="@+id/spinner_maint"
                                    android:layout_width="150dp"
                                    android:layout_height="30dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/btn_save"
            style="@style/form_btn_confirm"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="创 建" />
    </FrameLayout>
</LinearLayout>
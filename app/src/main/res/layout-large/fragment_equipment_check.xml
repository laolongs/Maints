<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/x5"
    android:paddingRight="@dimen/x5"
    android:paddingBottom="@dimen/y5"
    android:background="@color/common_root"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/common_root"
        android:id="@+id/layout_lv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y57"
        android:orientation="vertical">
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/listview_lv1_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <View
            android:id="@+id/vv"
            android:layout_marginLeft="@dimen/x43"
            android:layout_toRightOf="@+id/listview_lv1_2"
            android:layout_marginTop="@dimen/y7"
            android:layout_marginBottom="@dimen/y7"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="#9CAAB9"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/x43"
            android:layout_toRightOf="@+id/vv"
            android:id="@+id/equipment_eleConfiguration"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/equipment_eleLL"
                android:layout_marginTop="@dimen/y15"
                android:gravity="center"
                android:layout_width="@dimen/x84"
                android:layout_height="@dimen/y42">
                <TextView
                    android:id="@+id/equipment_eleRoom"
                    android:textColor="#9CAAB9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="电房配置"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y5"
            android:layout_marginBottom="@dimen/y5"
            android:id="@+id/equipment_companyMessage"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x25"
            android:layout_width="@dimen/x120"
            android:background="@drawable/btn_compay"
            android:layout_height="@dimen/y47">
            <TextView
                android:textColor="#1A92EE"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业信息"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        style="@style/common_linehight"/>
    <LinearLayout
        android:background="#E9ECF2"
        android:id="@+id/layout_equipment_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
           style="@style/common_linewidth"/>
        <LinearLayout
            android:background="#E9ECF2"
            android:id="@+id/layout_lv2"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lv2_img"
                android:layout_marginTop="@dimen/y15"
                android:layout_gravity="center"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y49"
                android:src="@mipmap/file_new"/>
            <TextView
                android:id="@+id/lv2_tv"
                android:layout_marginTop="@dimen/y4"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#FFA000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建"/>
            <LinearLayout
                android:paddingLeft="@dimen/x2"
                android:paddingRight="@dimen/x2"
                android:id="@+id/layout_lv2_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/y23"
               >
                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_lv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_listview_gray" />
                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_lv2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_lv2_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前没有任何柜体"/>
            </LinearLayout>
        </LinearLayout>

        <View
           style="@style/common_linewidth"/>
        <!-- 展示三级设备-->
        <LinearLayout
            android:background="#E9ECF3"
            android:gravity="center"
            android:id="@+id/layout_lv3_hite"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前没有任何设备"/>
        </LinearLayout>

        <LinearLayout
                android:background="#E9ECF2"
                android:visibility="gone"
                android:id="@+id/layout_lv3_all"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginTop="@dimen/y12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y32"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/layout_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/selView"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/black" />

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginRight="@dimen/x16"
                        android:id="@+id/btn_editor"
                        android:background="@drawable/btn_cancel"
                        android:gravity="center"
                        android:layout_width="@dimen/x119"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/x17"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/img_editor"/>
                        <TextView
                            android:layout_marginLeft="@dimen/x6"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="编辑"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="@dimen/x17"
                        android:id="@+id/btn_del"
                        android:background="@drawable/btn_cancel"
                        android:gravity="center"
                        android:layout_width="@dimen/x119"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/x17"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/img_deletes"/>
                        <TextView
                            android:layout_marginLeft="@dimen/x6"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="删除"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="@dimen/x34"
                        android:id="@+id/btn_new"
                        android:background="@drawable/btn_cancel"
                        android:gravity="center"
                        android:layout_width="@dimen/x158"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/x17"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/img_new"/>
                        <TextView
                            android:layout_marginLeft="@dimen/x6"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="新建相同设备"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/y13"
                    android:id="@+id/layout_lv2_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_min_gray"
                            android:text="是否有柜体"/>
                        <TextView
                            android:layout_marginLeft="@dimen/x20"
                            android:id="@+id/lv2_details_iscabinet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_min_gray"
                            android:text="否"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_min_gray"
                            android:text="分类"/>
                        <TextView
                            android:layout_marginLeft="@dimen/x62"
                            android:id="@+id/lv2_details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/common_text_min_gray"
                            android:text="高压开关柜"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/y30"
                    android:id="@+id/layout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/y10"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/common_text_max_gray"
                            android:text="包含设备"/>
                        <TextView
                            android:layout_marginLeft="@dimen/x10"
                            android:id="@+id/lv2_details_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/common_text_max_gray"
                            android:text="0"/>
                    </LinearLayout>
                    <ListView
                        android:layout_marginTop="@dimen/y9"
                        android:paddingLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x34"
                        android:id="@+id/lv3_leaf_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </ListView>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="@dimen/y9"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x34"
                        android:id="@+id/list_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/colorTransparent">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_ele_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            style="@style/common_linewidth"/>
        <LinearLayout
            android:background="#E9ECF2"
            android:id="@+id/layout_ele_lv2"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lv2_ele_img"
                android:layout_marginTop="@dimen/y20"
                android:layout_gravity="center"
                android:layout_width="@dimen/x49"
                android:layout_height="@dimen/y49"
                android:src="@mipmap/file_new"/>
            <TextView
                android:id="@+id/lv2_ele_tv"
                android:layout_marginTop="@dimen/y4"
                android:textSize="14sp"
                android:textColor="#FFA000"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建电房"/>
            <LinearLayout
                android:id="@+id/layout_lv2_ele_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/y30">
                <LinearLayout
                    android:paddingLeft="@dimen/x2"
                    android:paddingRight="@dimen/x2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_ele_lv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_listview_gray" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/common_bg"
                android:id="@+id/layout_lv2_ele_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前没有电房"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
        <!-- 展示三级设备-->
        <LinearLayout
            android:background="#DDE2EC"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_lv3_ele_hite"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择电表或新建电表"/>
        </LinearLayout>
        <LinearLayout
            android:background="#DDE2EC"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_lv3_ele_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y102"
                    android:background="#E9ECF2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:paddingLeft="@dimen/x20"
                        android:layout_marginTop="@dimen/y25"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="@dimen/y2"
                            android:id="@+id/text_ele_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电房配置"
                            android:textSize="26sp"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y52"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_marginRight="@dimen/x10"
                                android:id="@+id/btn_ele_del"
                                android:background="@drawable/btn_delete_normal"
                                android:gravity="center"
                                android:layout_width="@dimen/x119"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="删除"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="@dimen/x10"
                                android:id="@+id/btn_ele_update"
                                android:background="@drawable/btn_cancel"
                                android:gravity="center"
                                android:layout_width="@dimen/x119"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="修改基本信息"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="@dimen/x24"
                                android:id="@+id/btn_ele_editor"
                                android:background="@drawable/btn_cancel"
                                android:gravity="center"
                                android:layout_width="@dimen/x119"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:text="编辑"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginRight="@dimen/x24"
                                android:id="@+id/btn_ele_save"
                                android:background="@drawable/btn_confirm_normal"
                                android:gravity="center"
                                android:layout_width="@dimen/x158"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="保存"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:id="@+id/layout_lv3_ele_message"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="@dimen/y36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/common_text_max_gray"
                        android:text="基本信息"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/y18"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_text_min_gray"
                            android:textSize="13sp"
                            android:text="名称"/>
                        <TextView
                            android:id="@+id/ele_message_name"
                            android:layout_marginLeft="@dimen/x38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_text_min_gray"
                            android:textSize="13sp"
                            android:text="psdfpdsfs"/>
                       </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/y10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/common_text_min_gray"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型"/>
                        <TextView
                            android:id="@+id/ele_message_type"
                            android:layout_marginLeft="@dimen/x38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/common_text_min_gray"
                            android:textSize="13sp"
                            android:text="高压电访"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="@dimen/y33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/common_text_max_gray"
                        android:text="柜体/变压器"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="@dimen/y7"
                        android:id="@+id/lv3_ele_message_smrecy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <include
                    android:id="@+id/layout_lv3_ele_configuration"
                    layout="@layout/layout_common_distribution" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>
    <View
        style="@style/common_linehightdown"/>
</LinearLayout>
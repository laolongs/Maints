<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_lv1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/listview_lv1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_listview_gray" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/darkgray"
            android:id="@+id/layout_lv2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/lv2_img"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_add"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/lv2_tv"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建柜体"/>
            <LinearLayout
                android:id="@+id/layout_lv2_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingEnd="4dp"
                android:paddingStart="8dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_lv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_listview_gray" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_lv2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_listview_gray" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_lv2_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前没有任何柜体"/>
            </LinearLayout>
        </LinearLayout>
        <!-- 展示三级设备-->
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_lv3_hite"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前没有任何设备"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_lv3_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_background"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/layout_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/selView"
                            android:text=""
                            android:textColor="@color/royalblue" />

                    </RelativeLayout>
                    <Button
                        android:id="@+id/btn_editor"
                        style="@style/form_btn_confirm"
                        android:text="编辑" />
                    <Button
                        android:id="@+id/btn_del"
                        style="@style/form_btn_confirm"
                        android:layout_marginRight="20dp"
                        android:text="删除" />

                    <Button
                        android:id="@+id/btn_new"
                        style="@style/form_btn_confirm"
                        android:text="新建相同设备" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_lv2_details"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否有柜体"/>
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/lv2_details_iscabinet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前没有任何设备"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型"/>
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/lv2_details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高压开关柜"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="包含设备"/>
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/lv2_details_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="2"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/list_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/colorTransparent">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
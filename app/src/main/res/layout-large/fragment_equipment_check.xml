<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/common_root"
        android:id="@+id/layout_lv1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/listview_lv1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/equipment_companyMessage"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="100dp"
            android:background="@color/white"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#6DABD0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业信息"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/equipment_eleConfiguration"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="200dp"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/equipment_eleLL"
                android:layout_marginTop="10dp"
                android:background="@color/common_root"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/equipment_eleRoom"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电房配置"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        style="@style/common_linehight"/>
    <LinearLayout

        android:id="@+id/layout_equipment_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <LinearLayout
            android:background="@color/common_bg"
            android:id="@+id/layout_lv2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lv2_img"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/file_new"/>
            <TextView
                android:id="@+id/lv2_tv"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建"/>
            <LinearLayout
                android:id="@+id/layout_lv2_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:paddingTop="15dp">
                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_lv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_listview_gray" />
                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_lv2_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_lv2_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前没有任何柜体"/>
            </LinearLayout>
        </LinearLayout>

        <View
           style="@style/common_linewidth"/>
        <!-- 展示三级设备-->
        <LinearLayout
            android:background="#E9ECF3"
            android:gravity="center"
            android:id="@+id/layout_lv3_hite"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前没有任何设备"/>
        </LinearLayout>

        <LinearLayout
                android:background="#E9ECF3"
                android:visibility="gone"
                android:id="@+id/layout_lv3_all"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/layout_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/selView"
                            android:text=""
                            android:textSize="25sp"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <Button
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_editor"
                        style="@style/form_btn_confirms"
                        android:text="编辑" />
                    <Button
                        android:gravity="center"
                        android:id="@+id/btn_del"
                        style="@style/form_btn_confirms"
                        android:layout_marginRight="10dp"
                        android:text="删除" />

                    <Button
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:id="@+id/btn_new"
                        style="@style/form_btn_confirms"
                        android:text="新建相同设备" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_lv2_details"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否有柜体"/>
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/lv2_details_iscabinet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前没有任何设备"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型"/>
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/lv2_details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高压开关柜"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="包含设备"/>
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:id="@+id/lv2_details_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="0"/>
                    </LinearLayout>
                    <ListView
                        android:id="@+id/lv3_leaf_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </ListView>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/list_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/colorTransparent">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ele_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            style="@style/common_linewidth"/>
        <LinearLayout
            android:background="@color/common_bg"
            android:id="@+id/layout_ele_lv2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lv2_ele_img"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/file_new"/>
            <TextView
                android:id="@+id/lv2_ele_tv"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建电房"/>
            <LinearLayout
                android:id="@+id/layout_lv2_ele_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingEnd="4dp"
                android:paddingStart="8dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                        android:id="@+id/listview_ele_lv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_listview_gray" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:background="@color/common_bg"
                android:id="@+id/layout_lv2_ele_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前没有电房"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
        <!-- 展示三级设备-->
        <LinearLayout
            android:background="@color/common_bg"
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/layout_lv3_ele_hite"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择电表或新建电表"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/common_bg"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_lv3_ele_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/text_ele_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电房配置"
                            android:textSize="25sp"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btn_ele_del"
                                style="@style/form_btn_confirms"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:text="删除" />

                            <Button
                                android:id="@+id/btn_ele_update"
                                style="@style/form_btn_confirms"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:text="修改基本信息" />
                            <Button
                                android:id="@+id/btn_ele_save"
                                style="@style/form_btn_confirms"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:text="保存" />
                            <Button
                                android:id="@+id/btn_ele_editor"
                                style="@style/form_btn_confirms"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:text="编辑" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_lv3_ele_message"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名称"/>
                        <TextView
                            android:id="@+id/ele_message_name"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="psdfpdsfs"/>
                       </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型"/>
                        <TextView
                            android:id="@+id/ele_message_type"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高压电访"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="柜体/变压器"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lv3_ele_message_smrecy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <include
                    android:id="@+id/layout_lv3_ele_configuration"
                    layout="@layout/layout_common_distribution" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>

</LinearLayout>
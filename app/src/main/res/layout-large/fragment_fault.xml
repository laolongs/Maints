<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">
    <View
        style="@style/common_linehight"/>

    <LinearLayout
        android:id="@+id/fault_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
       >
        <View
            style="@style/common_linewidth"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_fault_all"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消缺"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_listview_gray"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <in.srain.cube.views.ptr.PtrClassicFrameLayout
                        android:background="@color/common_bg"
                        android:id="@+id/ptrlayout_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        cube_ptr:ptr_duration_to_close="200"
                        cube_ptr:ptr_duration_to_close_header="1000"
                        cube_ptr:ptr_keep_header_when_refresh="true"
                        cube_ptr:ptr_pull_to_fresh="false"
                        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                        cube_ptr:ptr_resistance="1.7">
                        <ListView
                            android:id="@+id/list_fault"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_fault_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:text="当前无消缺"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>

    <View
        style="@style/common_linehight"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x3"
    android:background="@color/common_bg"
    android:orientation="vertical">
    <View
        style="@style/common_linehight"/>

    <LinearLayout
        android:id="@+id/patrol_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
       >
        <View
            style="@style/common_linewidth"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_lv1_all"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent">
                <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                    android:layout_marginTop="@dimen/x22"
                    android:id="@+id/listview_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_lv1_hite"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="当前无电房"
                    />
            </LinearLayout>
            <View
                style="@style/common_linewidth"/>
            <LinearLayout
                android:id="@+id/layout_lv2_all"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent">
                <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                    android:layout_marginTop="@dimen/x22"
                    android:id="@+id/listview_lv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_lv2_hite"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="当前电房无数据"
                    />
            </LinearLayout>
            <View
                style="@style/common_linewidth"/>
            <LinearLayout
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x25"
                android:id="@+id/layout_lv3_all"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_marginTop="@dimen/x25"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电房巡视"
                        android:textSize="20sp"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:id="@+id/patrol_addquestion"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新建问题"
                            android:textColor="@color/listview_check"
                            android:textSize="14sp"/>
                        <ImageView
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_width="@dimen/x49"
                            android:layout_height="@dimen/x49"
                            android:src="@mipmap/new_equipment"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/x22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_listview_gray"
                    android:orientation="vertical"
                    >
                    <in.srain.cube.views.ptr.PtrClassicFrameLayout
                        android:background="@color/common_bg"
                        android:id="@+id/ptrlayout_order"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        cube_ptr:ptr_duration_to_close="200"
                        cube_ptr:ptr_duration_to_close_header="1000"
                        cube_ptr:ptr_keep_header_when_refresh="true"
                        cube_ptr:ptr_pull_to_fresh="false"
                        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                        cube_ptr:ptr_resistance="1.7">
                        <ListView
                            android:id="@+id/list_patrol_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:dividerHeight="2dp"
                            android:divider="@color/common_bg"/>
                    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_lv3_hite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="当前没有进行中的巡视任务"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>

    <View
        style="@style/common_linehightdown"/>
</LinearLayout>
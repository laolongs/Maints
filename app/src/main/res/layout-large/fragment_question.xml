<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:padding="@dimen/x5"
    android:background="@color/common_root"
    style="@style/common_linearLayout">
    <LinearLayout
        android:background="@color/common_root"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:background="@color/common_root"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/x15"/>
            <RadioGroup
                android:id="@+id/questoin_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x45"
                android:background="@color/common_root"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/text_undo"
                    android:layout_width="@dimen/x100"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/selector_radiobtn_order_bg"
                    android:textColor="@color/selector_radiobutton_text"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:text="未进行" />
                <RadioButton
                    android:id="@+id/text_executing"
                    android:layout_width="@dimen/x100"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/selector_radiobtn_order_bg"
                    android:textColor="@color/selector_radiobutton_text"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:text="进行中" />
                <RadioButton
                    android:id="@+id/text_complete"
                    android:layout_width="@dimen/x100"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/selector_radiobtn_order_bg"
                    android:textColor="@color/selector_radiobutton_text"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:text="已完成" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/x9"
            android:layout_marginBottom="@dimen/x9"
            android:id="@+id/equipment_allcompay"
            android:gravity="center"
            android:layout_marginRight="@dimen/x16"
            android:layout_width="@dimen/x150"
            android:background="@drawable/btn_compay"
            android:layout_height="@dimen/x40">
            <TextView
                android:textColor="@color/root_check"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部公司"/>
            <ImageView
                android:layout_marginLeft="@dimen/x18"
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x8"
                android:src="@mipmap/details_down"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/x9"
            android:layout_marginBottom="@dimen/x9"
                android:id="@+id/equipment_alltime"
                android:gravity="center"
                android:layout_marginRight="@dimen/x8"
                android:layout_width="@dimen/x150"
                android:background="@drawable/btn_compay"
                android:layout_height="@dimen/x40">
                <TextView
                    android:textColor="@color/root_check"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部时间"/>
                <ImageView
                    android:layout_marginLeft="@dimen/x18"
                    android:layout_width="@dimen/x8"
                    android:layout_height="@dimen/x8"
                    android:src="@mipmap/details_down"/>
            </LinearLayout>
    </LinearLayout>



    <View
        style="@style/common_linehight"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            style="@style/common_linewidth"/>
        <LinearLayout
            android:background="@color/common_bg"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/x29"
                android:background="@color/common_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题列表"
                    android:textSize="26sp"
                    android:textColor="@color/black" />
            </LinearLayout>
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:layout_marginTop="@dimen/x24"
                android:background="@color/common_bg"
                android:id="@+id/ptrlayout_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                cube_ptr:ptr_duration_to_close="200"
                cube_ptr:ptr_duration_to_close_header="1000"
                cube_ptr:ptr_keep_header_when_refresh="true"
                cube_ptr:ptr_pull_to_fresh="false"
                cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                cube_ptr:ptr_resistance="1.7">
                <ListView
                    android:id="@+id/list_question"
                    style="@style/table_listview" />
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        </LinearLayout>
        <View
            style="@style/common_linewidth"/>
    </LinearLayout>
    <View
        style="@style/common_linehightdown"/>
</LinearLayout>
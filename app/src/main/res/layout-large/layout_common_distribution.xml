<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#DEE2ED"
    android:orientation="horizontal">
    <LinearLayout
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:layout_marginBottom="@dimen/x22"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/x20"
            android:layout_width="@dimen/x340"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/y43"
                android:id="@+id/text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF6B6B6B"
                android:text="已分配"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_marginTop="@dimen/y5"
                android:background="@color/common_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    style="@style/common_white_linehight"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <View
                        android:layout_width="@dimen/x3"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <ListView
                        android:layout_marginLeft="@dimen/x7"
                        android:layout_marginRight="@dimen/x7"
                        android:layout_marginTop="@dimen/y7"
                        android:id="@+id/listview_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:divider="#E9ECF2"
                        android:dividerHeight="2dp"
                        android:layout_height="wrap_content"
                        android:background="#E9ECF2" />
                    <View
                        android:layout_width="@dimen/x3"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                </LinearLayout>
                <View
                    style="@style/common_white_linehight"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y219"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/button_left"
                android:layout_width="@dimen/x74"
                android:layout_height="@dimen/y74"
                android:layout_marginBottom="@dimen/y25"
                android:src="@mipmap/ele_right" />
            <ImageView
                android:id="@+id/button_right"
                android:layout_width="@dimen/x74"
                android:layout_height="@dimen/y74"
                android:src="@mipmap/ele_left" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/x20"
            android:layout_width="@dimen/x340"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/y43"
                android:id="@+id/text_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF6B6B6B"
                android:text="未分配"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_marginTop="@dimen/y5"
                android:background="@color/common_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    style="@style/common_white_linehight"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <View
                        android:layout_width="@dimen/x3"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <ListView
                        android:layout_marginLeft="@dimen/x7"
                        android:layout_marginRight="@dimen/x7"
                        android:layout_marginTop="@dimen/y7"
                        android:id="@+id/listview_right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:divider="#E9ECF2"
                        android:dividerHeight="2dp"
                        android:layout_height="wrap_content"
                        android:background="#E9ECF2" />
                    <View
                        android:layout_width="@dimen/x3"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                </LinearLayout>
                <View
                    style="@style/common_white_linehight"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEE2ED"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_left"
                android:layout_width="wrap_content"
                android:layout_height="25px"
                android:textColor="#FF6B6B6B"
                android:text="ddd"
                android:textSize="18px" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@color/common_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    style="@style/common_linehight"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <View
                        style="@style/common_linewidth"/>
                    <ListView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/listview_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:divider="#FFFFFF"
                        android:dividerHeight="3dip"
                        android:layout_height="wrap_content"
                        android:background="#fff" />
                    <View
                        style="@style/common_linewidth"/>
                </LinearLayout>
                <View
                    style="@style/common_linehight"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_left"
            android:layout_width="63.5px"
            android:layout_height="63.5px"
            android:layout_marginBottom="50dp"

            android:src="@mipmap/ele_right" />

        <ImageView
            android:id="@+id/button_right"
            android:layout_width="63.5px"
            android:layout_height="63.5px"
            android:layout_marginBottom="40dp"
            android:src="@mipmap/ele_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_right"
                android:layout_width="wrap_content"
                android:layout_height="25px"
                android:text="未分配"
                android:textColor="#FF6B6B6B"
                android:textSize="18px" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@color/common_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    style="@style/common_linehight"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <View
                        style="@style/common_linewidth"/>
                    <ListView
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/listview_right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:divider="#FFFFFF"
                        android:dividerHeight="3dip"
                        android:layout_height="wrap_content"
                        android:background="#fff" />
                    <View
                        style="@style/common_linewidth"/>
                </LinearLayout>
                <View
                    style="@style/common_linehight"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
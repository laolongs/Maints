<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/edittext_radius"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x332">
        <LinearLayout
            android:layout_marginTop="@dimen/x18"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="@dimen/x500"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="@dimen/x13"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x26">
                <ImageView
                    android:gravity="center"
                    android:id="@+id/img_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/img_patrol_general"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="@dimen/x32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="title"
                    android:textColor="#424242"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:paddingLeft="@dimen/x13"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_marginTop="@dimen/x23"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <!--<TextView-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:id="@+id/text_schedule"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:text="" />-->
                    <ListView
                        android:id="@+id/question_imglist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </ListView>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/x5"
                    android:id="@+id/text_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_max_gray"
                    android:text="2018-01-27"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginBottom="@dimen/x17"
                    android:id="@+id/text_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/root_check"
                    android:textSize="18sp"
                    android:text="查看更多"
                    />
            </LinearLayout>
            <View
                android:background="@color/common_text_max_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x35"/>

            <LinearLayout
                android:gravity="right"
                android:orientation="vertical"
                android:layout_width="@dimen/x220"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x24"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/text_company"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="公司"
                        android:textSize="14sp"
                        android:textColor="@color/common_text_max_gray"/>
                    <LinearLayout
                        android:layout_marginTop="@dimen/x18"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:gravity="center_horizontal"
                            android:layout_width="@dimen/x10"
                            android:layout_height="@dimen/x15"
                            android:src="@mipmap/img_location"/>
                        <TextView
                            android:id="@+id/text_address1"
                            android:layout_marginLeft="@dimen/x12"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sdf" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/text_address2"
                        android:paddingTop="@dimen/x8"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asda"
                        />
                    <TextView
                        android:id="@+id/text_address3"
                        android:paddingTop="@dimen/x8"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dfsdf"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/x30"
                    android:layout_marginTop="@dimen/x55"
                    android:layout_gravity="center"
                    android:id="@+id/btn_description"
                    android:layout_width="@dimen/x160"
                    android:background="@drawable/btn_confirm_normal"
                    android:layout_height="@dimen/x40">
                    <TextView
                        android:id="@+id/btn_text"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="描述问题"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/common_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x22"/>
    </LinearLayout>

</LinearLayout>


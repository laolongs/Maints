<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y310"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/y17"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/x16"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y26">
            <ImageView
                android:id="@+id/img_type"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y26"
                android:src="@mipmap/img_patrol_general"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/x27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="title"
                android:textColor="#424242"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/x16"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--<TextView-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:id="@+id/text_description"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="这没有此问题描述"-->
                <!--android:textSize="20sp" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ListView
                    android:id="@+id/question_imglist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>
            <TextView
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x15"
                android:id="@+id/text_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/root_check"
                android:textSize="18sp"
                android:text="查看更多"
                 />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/x39"
            android:orientation="vertical"
            android:layout_width="@dimen/x210"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x11"
           >
            <LinearLayout
                android:id="@+id/ll_noquestion"
                android:layout_marginTop="@dimen/x71"
                android:background="@drawable/btn_empty_bggry"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y40"
                >
                <TextView
                    android:id="@+id/text_noquestion"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="以上报无问题"
                    android:textColor="@color/common_text_min_gray"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_question"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/btn_empty_bgblue"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y40">
                <TextView
                    android:id="@+id/text_question"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="重新上报问题"
                    android:textColor="@color/root_check"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


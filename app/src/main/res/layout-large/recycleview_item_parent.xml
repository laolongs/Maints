<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:orientation="vertical"
   >
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/expend"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/details_up"/>

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/parent_left_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/common_text_max_gray"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/parent_right_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/root_check"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/parent_dashed_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="software"
        android:layout_below="@+id/container"
        android:background="@color/white">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/child_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_marginBottom="25dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/re_item_child_compile"
                android:layout_width="119dp"
                android:gravity="center"
                android:background="@drawable/btn_confirm_normal"
                android:layout_height="32dp">
                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="编辑"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/re_item_child_delete"
                android:layout_marginLeft="16dp"
                android:layout_width="119dp"
                android:gravity="center"
                android:background="@drawable/btn_delete_normal"
                android:layout_height="32dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/img_delete"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="删除"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/re_item_child_new"
                android:layout_marginLeft="17dp"
                android:layout_width="158dp"
                android:gravity="center"
                android:background="@drawable/btn_confirm_normal"
                android:layout_height="32dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="新建相同设备"/>
            </LinearLayout>
         </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/import_con_layout_info"
    tools:context="cn.tties.maint.activity.EquipmentCheckDetailsActivity">
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/import_con_tv"
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导入先前配置"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/btn_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="即将导入下列配置的柜体"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_radius"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:text="选择公司"
                android:textColor="@color/gray" />
            <Spinner
                android:id="@+id/import_con_company"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="8"
                android:theme="@style/SpinnerStyle"/>
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_radius"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:text="选择户号"
                android:textColor="@color/gray" />
            <Spinner
                android:id="@+id/import_con_ele"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="8"
                android:theme="@style/SpinnerStyle"/>
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_radius"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="left"
                android:text="选择设备"
                android:textColor="@color/gray" />
            <Spinner
                android:id="@+id/import_con_equipment"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="8"
                android:theme="@style/SpinnerStyle"/>
            <View
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/import_con_cancel"
            android:background="@color/btn_color"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/btn_color"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:paddingLeft="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eq_de_name"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预览装置"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/import_con_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/selView"
                    android:text="企业设备名称"
                    android:textColor="@color/royalblue" />
            </RelativeLayout>
            <Button
                android:layout_marginRight="20dp"
                android:id="@+id/import_con_btn_import"
                style="@style/form_btn_confirm"
                android:text="导入" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有柜体"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/import_con_iscabinet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"/>
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/import_con_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高压开关柜"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包含子设备"/>
            <TextView
                android:id="@+id/import_con_num"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:id="@+id/import_con_hite"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无设备信息"/>
           </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/import_con_all"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/import_con_leaf_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
            <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                android:id="@+id/import_con_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/colorTransparent">
            </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
